<div
	class="flex flex-row md:flex-col bg-stone-50 text-stone-900 transition-all shadow-md justify-between relative">
	<div class="absolute bg-primary text-stone-900 px-4 py-2 shadow-md top-0 left-0">
		<p><%= category.name %></p>
	</div>
	<img
		src="<%= food.image_url %>?<%= Math.random() %>"
		class="md:object-cover h-auto w-2/6 md:w-full" />
	<div class="w-4/6 md:w-full transition-all flex flex-col justify-between gap-1 md:gap-2 flex-1 p-2 md:p-4">
		<div>
			<div class="flex flex-col justify-between">
				<p class="text-xs md:text-sm italic capitalize"><%= food.type %></p>
				<div class="flex flex-row justify-between">
					<p
						class="transition-all text-sm md:text-xl capitalize truncate">
						<%= food.title %>
					</p>
					<p class="text-xs md:text-base italic font-light">
						$<%= food.price %>
					</p>
				</div>
			</div>
			<div class="flex">
				<p
					class="transition-all overflow-hidden text-2xs md:text-xs italic text-stone-900 break-words opacity-80 line-clamp-3 md:line-clamp-6 flex-auto">
					<%= food.description -%>
				</p>
			</div>
		</div>
		<div class="flex flex-row gap-2 place-self-end justify-self-center">
			<button
				class="flex items-center justify-center text-xs md:text-sm lg:text-base hover:text-primary transition-all">
				Customize
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="2"
					stroke="currentColor"
					class="w-2 md:w-4 h-3 md:h-6 drop-shadow-md">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M8.25 4.5l7.5 7.5-7.5 7.5" />
				</svg>
			</button>
			<button
				type="button"
				class="transition-all border border-stone-900 hover:border-primary bg-transparent hover:bg-primary text-stone-900 hover:text-stone-50 p-1 md:p-2 text-xs md:text-sm lg:text-base flex flex-row gap-1 md:gap-2 items-center">
				Add to
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="w-4 h-4 md:w-6 md:h-6">
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
				</svg>
			</button>
		</div>
	</div>
</div>
